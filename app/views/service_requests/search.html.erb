<h3 text align="center">Search handling forms</h3>

<%form_tag :action=>'search' do%>

	<div_id="date_start" align="center">
		Start Period: <%= datetime_select :date_search, :date_start, :order => [:year, :month, :day]%>
	</div>
	<div_id="date_stop">
		End Period: <%= datetime_select :date_search, :date_stop, :order => [:year, :month, :day]%><br/>
	</div>	
<div id="search_input_condition"> 
<form> 
  <select name="searchdata" id="searchdata" 
   onChange="updateEvents(this[this.selectedIndex].value);"> 
   <option value="">Select condition</option> 
   <option value="1">Airline</option> 
   <option value="2">Mtow</option>
	<option value="3">Handling form ID</option> 
  </select> 
</form> 
</div>
	<div id="search_aircrafts" style="display:none;"> 
			Airline name :<%= text_field_tag :search_airline, params[:search_airline]%><br/>
	</div>
	<div id="search_mtow" style="display:none;"> 
			Mtow :<%= text_field_tag :search_mtow, params[:search_mtow]%><br/>
	</div>
	<div id="search_handling_id" style="display:none;"> 
			Handling form ID :<%= text_field_tag :search_handling_id, params[:search_handling_id]%><br/>
	</div>

	<%= submit_tag "Search"%>

<% end %>

<table align="center" border="1" cellpadding="0" cellspacing="0"  width="600" id="search_table">
<tr>
	<br/>
</tr>

<tr>
    <th>Airline</th>
    <th>A/C type</th>
    <th>Mtow</th>
    <th>Flight</th>
    <th>Passengers arriving</th>
    <th>Passengers departing</th>
    <th>Route</th>
    <th>Landing</th>
    <th>Take off</th>
</tr>

<% if @service_requests != nil%>
<% for service_request in @service_requests %>
  <tr>
    <td><%=h service_request.airline %></td>
    <td><%=h service_request.a_c_type %></td>
    <td><%=h service_request.mtow %></td>
    <td><%=h service_request.flight %></td>
    <td><%=h service_request.passengers_arriving %></td>
    <td><%=h service_request.passengers_departing %></td>
    <td><%=h service_request.route %></td>
    <td><%=h service_request.landing %></td>
    <td><%=h service_request.take_off %></td>
    <td><%= link_to 'Show', service_request %></td>
    <td><%= link_to 'Edit', edit_service_request_path(service_request) %></td>
    <td><%= link_to 'Destroy', service_request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<% end %>
</table>

<p align="center">
	<%= link_to 'New search', search_service_requests_path%>
</p>
<p align="center">
	<%= link_to 'List all service request', service_requests_path %>
</p>
